{
  "name": "ScratchBook Extension",
  "description": "ScratchBook Extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "extBackground.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "ScratchBook",
    "default_icon": "icon_32.png"
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+P",
        "mac": "Alt+P"
      },
      "description": "Opens hello.html"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"]
}
